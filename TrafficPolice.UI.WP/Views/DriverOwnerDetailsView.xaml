                    <toolkit:DatePicker Margin="15,170,250,370" Value="{Binding DriverOwner.LicenceIssueDate}" Height="120" Width="200" HorizontalContentAlignment="Center" Header="Издаден на"  IsHitTestVisible="False"  FontSize="30" />
